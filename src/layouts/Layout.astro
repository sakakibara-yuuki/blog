---
import { Header } from '@layouts/Header'
import { ThemeProvider } from '@components/ThemeContext'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>sakakibara's blog</title>
	</head>
	<body>
      <ThemeProvider>
        <Header />
        <slot />
      </ThemeProvider>
	</body>
</html>

<style is:global>
    @charset "utf-8";
    :root {
      --large-size: 1024px;
      --midium-size: 768px;
      --small-size: 480px;

      --main-bg-color: rgb(20% 20% 50%);
      --font-color: rgb(100% 100% 100%);
      --link-font-color: rgb(100% 100% 100%);
      --visited-font-color: rgb(34 139 34);
    }
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      background: var(--main-bg-color);
      color: var(--font-color);
    }
    html[data-theme='dark'] {
      --main-bg-color: rgb(240 240 240);
      --font-color: rgb(51 51 51);
    }
    html[data-theme='light'] {
      --main-bg-color: rgb(20 20 20);
      --font-color: rgb(0 0 0);
    }
    a:link {
      color: var(--link-font-color);
    }
    a:visited {
      color: var(--visited-font-color);
    }

